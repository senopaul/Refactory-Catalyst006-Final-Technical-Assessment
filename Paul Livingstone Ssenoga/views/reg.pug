doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Patient Registration Form
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css')
  link(rel='stylesheet' href='../css/patientsform.css')
  link(rel='stylesheet' href='../register.css')
.container
  header
    img(src='/images/form-header-image.png' alt='')
  form#patients.patients(action='/register' method='POST')
    h3 Ministry of Health Covid
    h1 Covid-19(Corona Virus)
    h4 Virus Test Form
    .row.form
      .col.form-group
        label(for='surname') Surname:
        input#surname.form-control(type='text' name='surname')
      .col.form-group
        label(for='given') Given Name:
        input#given.form-control(type='text' name='given')
    .row.form
      .col.form-group
        label(for='surname') Date of Birth:
        input#dob.form-control(type='date' name='dob')
      .col.form-group
        label(for='residence') Place of Residence:
        input#residence.form-control(type='text' name='residence')
    .row.form
      .col.form-group
        label(for='occupation') Occupation:
        input#occupation.form-control(type='text' name='occupation')
      .col.form-group
        label(for='nationality') Nationality:
        input#nationality.form-control(type='text' name='nationality')
    .row.form
      .col.form-group
        label(for='gender ') Gender : 
        label(for='Male') Male
        input#gender(type='radio' name='gender' value='Male')
        label(for='Male') Female
        input#gender(type='radio' name='gender' value='Female')
    .row.form
      .col.form-group
        select#category(name='category')
          option(value='category' selected='') Select category
          option(value='category') Returnee
          option(value='category') Contact
          option(value='category') Alert
          option(value='category') Volunteer
    
      .col.form-group
        button.btn.btn-primary(type='submit'  onclick='validating') Register
