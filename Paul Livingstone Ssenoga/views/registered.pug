meta(charset="UTF-8")
meta(name="viewport", content="width=device-width,initial-scale=1")
title Patient Registration Form
link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css")
link(rel="stylesheet", href="../css/patientsform.css")
form.container
  .row.form
    .col.form-group
      .col-md-12
        .header
          img(src='/images/form-header-image.png')

        form(action ='/register', method='POST' name='register' )
          h3 Ministry of Health Covid
          h1 Covid-19(Corona Virus)
          h4 Virus Test Form)
        .row.form
          .form-group
            label(for="firstname") Surname:
            input#surname.form-control(type="text",  name="surname" required='' min='1' max='16')    
          .form-group
            label(for="lastname") Given Name:
            input#given.form-control(type="text", name="given" required='' min='1' max='16')       
        .row.form 
          .form-group
            label(for='dob')  Date of Birth:
            input#dob.form-control(type="date",placeholder='YY/MM/DD', name="dob")
          .form-group
            label(for='residence') Place of Residence:
            input#residence(type='text' name='residence' required='' min='1' max='20')
        .row.form
          .form-group
            label(for='occupation') Occupation:
            input#occupation(type='text' name='occupation' required='' min='5' max='10')

          .form-group  
            label(for='nationality') Nationality:
            input#nationality(type='text' name='nationality' required='' min='5' max='10')
        .row.form

          .form-group
            label(for='gender ') Gender : 
            label(for='Male') Male
            input(type='radio' name='gender' value='Male')
            label(for='Male') Female
            input(type='radio' name='gender' value='Female')   
          .form-group
            select#category(name='category')
              option(value='category' selected='') Select category
              option(value='category') Returnee
              option(value='category') Contact
              option(value='category') Alert
              option(value='category') Volunteer
          .row.form
          .form-group
            button.btn.btn-primary(type='submit'  onclick='validating') Register
    script(src="../js/valids.js")
